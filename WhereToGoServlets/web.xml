<?xml version="1.0" encoding="ISO-8859-1" ?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">

    <display-name>HelloWorld Application</display-name>
    <description>
        This is a simple web application with a source code organization
        based on the recommendations of the Application Developer's Guide.
    </description>

    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>HelloWorld</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EventTypes</servlet-name>
        <servlet-class>EventTypes</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EventTypes</servlet-name>
        <url-pattern>/events/types</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>User</servlet-name>
        <servlet-class>User</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/current</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Invite</servlet-name>
        <servlet-class>Invite</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Invite</servlet-name>
        <url-pattern>/invites</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Friends</servlet-name>
        <servlet-class>Friends</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Friends</servlet-name>
        <url-pattern>/friends</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Events</servlet-name>
        <servlet-class>Events</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Events</servlet-name>
        <url-pattern>/events</url-pattern>
    </servlet-mapping>


 
</web-app>
